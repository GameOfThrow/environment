# Install command-line tools using Homebrew
# Usage: `brew bundle`

# brew cask for apps
tap 'caskroom/cask'
tap 'caskroom/versions'
brew 'brew-cask'

# shell
brew 'zsh'

# terminal
cask 'iterm2'

# git
brew 'git', args: ['without-completions']
brew 'git-extras'
cask 'rowanj-gitx'

# ruby version manager
brew 'chruby'
brew 'ruby-install'

# other development languages
brew 'node'
brew 'python'
cask 'java'
brew 'go'
brew 'scala'

# databases
brew 'postgresql', args: ['no-python']
brew 'redis'
brew 'rabbitmq'
brew 'memcached'

# replace default openssl
brew 'openssl'

# utils
brew 'coreutils'
brew 'ack'
brew 'the_silver_searcher'
brew 'fasd'
brew 'wget'
brew 'curl'
brew 'ccat'

brew 'awscli'
brew 'terminal-notifier'
brew 'forego'

# editor
brew 'vim', args: ['override-system-vi']
brew 'macvim'

# development font
